<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/account_ab" />
            <stroke
                android:width="1dp"
                android:color="@color/account_ab" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="4dp"
                android:top="5dp"
                android:right="4dp"
                android:bottom="5dp" />
        </shape>
        </item>
    <item
        android:state_checked="true" >
        <shape>
            <solid
                android:color="@color/account_ab" />
            <stroke
                android:width="1dp"
                android:color="@color/account_ab" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="4dp"
                android:top="5dp"
                android:right="4dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
