<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_pressed="false"><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#868686" />

            <solid android:color="#95bcf2" />

            <corners android:radius="10dp" />
        </shape></item>
    <item android:state_checked="false" android:state_pressed="false"><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#868686" />

            <solid android:color="#ffffff" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>