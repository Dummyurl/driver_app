<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/popup_simple_info_dialog_shape">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/indicator_image_simple_dlg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/success_image_indicator_dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/success_status_text"
            android:id="@+id/status_textview_simple_dlg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/rideeze_dark_brown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Receipt"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:textColor="@color/rideeze_dark_brown"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:padding="10dp">

            <EditText
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:inputType="textEmailAddress"
                android:id="@+id/email_edit_enter_email_dialog"
                android:textSize="14dp"
                android:layout_weight="3" />

            <Button
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:text="Send"
                android:id="@+id/send_btn_enter_email_dialog"
                android:layout_weight="1"
                android:background="@color/green"
                android:textColor="@color/white"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Receipt"
            android:id="@+id/noreceipt_btn_enter_email_dialog"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@color/rideeze_dark_brown"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

    </LinearLayout>

</RelativeLayout>